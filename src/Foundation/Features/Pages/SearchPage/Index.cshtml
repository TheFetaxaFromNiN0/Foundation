@model SearchPageViewModel

<div class="row">
    <div class="col-12">
        @if (ViewBag.AllTags != null)
        {
            foreach (string tag in ViewBag.AllTags)
            {
                <span>@Html.ActionLink(tag, "Index", new {tagName = tag})</span>
            }
        }
        else
        {
            <h3>No tags...</h3>
        }
    </div>
    <div>
        @if (ViewBag.Results != null)
        {
            <div id="search-results">
    
                @foreach (FoundationPageData result in ViewBag.Results)
                {
                    <p>@Html.ContentLink(result)</p>
                }

            </div>   
        }
        else
        {
            <h3>Nothing Found</h3>
        }
    </div>
</div>
